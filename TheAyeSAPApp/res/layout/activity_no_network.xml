<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/noNetworkLogoWidth"
        android:layout_height="@dimen/noNetworkLogoHeight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/noNetworkLogoTop"
        android:src="@drawable/logoblue" />

    <TextView
        android:id="@+id/noNetwork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:gravity="center"
        android:text="@string/noNetworkError"
        android:textColor="@color/white" />

</RelativeLayout>